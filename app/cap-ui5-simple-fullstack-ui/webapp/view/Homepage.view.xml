<mvc:View
    controllerName="cftc.training.capui5simplefullstackui.controller.Homepage"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
    xmlns:smartTable="sap.ui.comp.smarttable"
    xmlns:rowmodes="sap.ui.table.rowmodes"
    xmlns:table="sap.ui.table"
>
    <Page
        id="Homepage"
        title="{i18n>title}"
    >
        <content>
            <IconTabBar>
                <items>
                    <IconTabFilter
                        key="Products"
                        text="Products"
                    >
                        <smartFilterBar:SmartFilterBar
                            id="sfbProducts"
                            entitySet="Products"
                        >
                            <smartFilterBar:controlConfiguration>
                                <smartFilterBar:ControlConfiguration
                                    key="firstReleaseDate"
                                    visibleInAdvancedArea="true"
                                    conditionType="{
                                        module: 'sap.ui.comp.config.condition.DateRangeType',
                                        defaultOperation: 'THISYEAR',
                                        operations: {
                                            filter: [{
                                                    path: 'key',
                                                    contains: 'TOMORROW',
                                                    exclude: true
                                                },
                                                {
                                                    path: 'key',
                                                    contains: 'NEXTWEEK',
                                                    exclude: true
                                                },
                                                {
                                                    path: 'key',
                                                    contains: 'NEXTXMONTHS',
                                                    exclude: true
                                                },
                                                {
                                                    path: 'key',
                                                    contains: 'NEXTMONTH',
                                                    exclude: true
                                                },
                                                {
                                                    path: 'key',
                                                    contains: 'NEXTQUARTER',
                                                    exclude: true
                                                },
                                                {
                                                    path: 'key',
                                                    contains: 'NEXTYEAR',
                                                    exclude: true
                                                }
                                            ]
                                        }
                                    }"                                    
                                />
                            </smartFilterBar:controlConfiguration>
                        </smartFilterBar:SmartFilterBar>
                        <smartTable:SmartTable
                            id="stProducts"
                            header="Products"
                            editable="false"
                            editTogglable="false"
                            enableAutoBinding="true"
                            enableExport="true"
                            entitySet="Products"
                            showFullScreenButton="true"
                            showVariantManagement="false"
                            tableType="Table"
                            showRowCount="true"
                            showTablePersonalisation="true"
                            smartFilterId="sfbProducts"
                            useVariantManagement="false"
                        >
                            <smartTable:customToolbar>
                                <OverflowToolbar>
                                    <ToolbarSpacer />
                                    <OverflowToolbarButton
                                        icon="sap-icon://add"
                                        press="onCreateProduct"
                                    />
                                    <OverflowToolbarButton
                                        icon="sap-icon://edit"
                                        press="onUpdateProduct"
                                    />
                                    <OverflowToolbarButton
                                        icon="sap-icon://delete"
                                        press="onDeleteProduct"
                                    />
                                </OverflowToolbar>
                            </smartTable:customToolbar>
                            <table:Table
                                id="uiTblProducts"
                                selectionMode="Single"
                            >
                                <table:rowMode>
                                    <rowmodes:Interactive rowCount="18" />
                                </table:rowMode>
                            </table:Table>
                        </smartTable:SmartTable>
                    </IconTabFilter>
                    <IconTabFilter
                        key="Customers"
                        text="Customers"
                    >
