<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <MessagePopover
        items="{message>/}"
        placement="Top"
        initiallyExpanded="true"
    >
        <headerButton>
            <Button
                text="Clear"
                press="onClearMessages"
            />
        </headerButton>
        <MessageItem
            type="{message>type}"
            title="{message>message}"
            subtitle="{message>additionalText}"
            description="{message>description}"
        />
    </MessagePopover>
</core:FragmentDefinition>
